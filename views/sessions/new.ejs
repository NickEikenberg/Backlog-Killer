<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body class="bg-gradient-to-r from-blue-200 via-blue-400 to-blue-600">
    <%- include('../partials/header.ejs') %>
    <div class="form-container flex justify-center my-10 h-3/4">
      <main
        class="
          flex flex-col
          w-3/4
          bg-gray-800
          border-gray-800
          rounded-md
          p-4
          md:w-1/2
          text-white
        "
      >
        <h1 class="text-center text-4xl mb-6">Login</h1>

        <form
          action="/sessions"
          method="post"
          class="flex flex-col justify-center"
        >
          <h1 class="px-2">Username</h1>
          <input
            type="text"
            name="username"
            placeholder="Enter your username"
            required
            class="bg-gray-800 border-white border-b-2 rounded-sm p-2 mb-4"
          />
          <h1 class="px-2">Password</h1>
          <input
            type="password"
            name="password"
            placeholder="Enter your password"
            class="bg-gray-800 border-white border-b-2 rounded-sm p-2"
          />
          <input
            type="submit"
            value="Login"
            class="
              cursor-pointer
              my-10
              py-2
              border-blue-600
              rounded-md
              bg-blue-600 bg-opacity-50
              hover:bg-opacity-100
            "
          />
        </form>
        <div class="signup-div flex flex-col items-center">
          <h1 class="text-center">Don't have an account?</h1>
          <a
            href="/users/new"
            class="
              w-1/3
              text-center
              my-4
              py-2
              border-blue-600
              rounded-md
              bg-blue-600 bg-opacity-50
              hover:bg-opacity-100
            "
            >Sign Up</a
          >
        </div>
      </main>
    </div>
    <%- include('../partials/footer.ejs') %> <%-
    include('../partials/icons.ejs') %>
  </body>
</html>
